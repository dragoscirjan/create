{
  "extends": "./node_modules/@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "paths": {}
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext"
    },
    "swc": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
