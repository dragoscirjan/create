{
  "files": ["src/**/*"],
  "compilerOptions": {
    "types": ["node"],

    // Enable latest features
    "lib": ["ES2020", "DOM", "DOM.iterable"],

    // Bundler mode

    // Best practices
    "strict": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "verbatimModuleSyntax": false,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
