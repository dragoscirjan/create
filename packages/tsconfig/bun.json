{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],

    // Best practices
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    // Best practices
    "removeComments": true,

    // Override to allow emitting compiled files
    "noEmit": false,
    "allowImportingTsExtensions": false
  }
}
