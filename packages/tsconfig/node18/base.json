{
  "extends": "@tsconfig/node18/tsconfig.json",
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.iterable"],
    "types": [],

    // Bundler mode
    "target": "ES2022",

    // Best practices
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "verbatimModuleSyntax": false,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
