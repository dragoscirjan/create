{
  "name": "@templ-project/code-build",
  "version": "0.0.1",
  "description": "Templ Tool for Running Nodejs Packers",
  "type": "module",
  "bin": "./bin/code-build.js",
  "exports": {
    ".": "./dist/index.js",
    "./bin": "./dist/code-build.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "clear-modules": "rimraf ./node_modules",
    "depcruise": "depcruise src",
    "lint:eslint": "eslint --fix ./src/**/*.ts",
    "lint:oxlint": "oxlint --fix ./src/**/*.ts",
    "lint": "run-s lint:*",
    "prettier": "prettier --write \"./**/*.{js,ts}\"",
    "test": "cross-env NODE_ENV=test vitest run"
  },
  "author": "Dragos Cirjan <dragos.cirjan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@templ-project/core": "^0.0.2",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.3.0",
    "listr": "^0.14.3",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@jscpd/html-reporter": "^4.0.1",
    "@templ-project/eslint-config-ts": "^1.0.1",
    "@templ-project/prettier-config": "^0.0.3",
    "@templ-project/tsconfig": "^0.0.2",
    "@types/execa": "^2.0.0",
    "@types/listr": "^0.14.9",
    "@types/lodash.merge": "^4.6.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^16.3.10",
    "jscpd": "^4.0.5",
    "oxlint": "^0.6.1",
    "rimraf": "^6.0.1",
    "snyk": "^1.1292.1",
    "typescript": "^5.5.4"
  }
}
